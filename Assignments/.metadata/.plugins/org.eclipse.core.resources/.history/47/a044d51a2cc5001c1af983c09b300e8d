package array;

import java.util.Arrays;
import java.util.Scanner;

public class Practice07 {
	public static void main(String[] args) {
		int arr[]= {25,45,63,14,75,96,25};
		System.out.println("this is your array: "+Arrays.toString(arr));
		
		Scanner input=new Scanner(System.in);
		System.out.println("\nInput the index of the element you wann remove: ");
		int num=input.nextInt();
		
		int [] arr1;
		arr1=new int[6];
		int a=0;
		
		for(int i=0;i<arr.length;i++) {
			if(i!=num) {
				arr1[a]=arr[i];
				a++;
			}
		}
		System.out.println("\nyour new array is: "+Arrays.toString(arr1));
	}
}
