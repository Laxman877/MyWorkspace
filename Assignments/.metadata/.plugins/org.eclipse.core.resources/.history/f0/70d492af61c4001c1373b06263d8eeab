package array;

public class Practice03 {
	public static void main(String[] args) {
		int arr[]=new int[] {12,45,15,75,63,85,94};
		int sum=0;
		for(int i=0;i<arr.length;i++) {
			sum+=arr[i];
		}
		double avg=sum/arr.length;
		System.out.println("the sum of array: "+sum+"\nthe avg of array: "+avg);
	}
}
 