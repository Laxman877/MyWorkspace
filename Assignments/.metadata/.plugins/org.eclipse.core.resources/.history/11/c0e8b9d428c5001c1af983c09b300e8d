package array;

import java.util.Arrays;
import java.util.Scanner;

public class Practice07 {
	public static void main(String[] args) {
		int [] value= {12,45,15,48,63,75,25};
		System.out.println("this is your array: "+Arrays.toString(value));
		
		Scanner input=new Scanner(System.in);
		System.out.println("\nInput the index you wann remove: ");
		int num=input .nextInt();
		int [] newvalue;
		newvalue=new int[9];
		int a=0;
		for(int i=0;i<value.length;i++) {
			if(i!=num) {
				newvalue[a]=value[i];
				a++;
			}
		}
		System.out.println("\nyour new array is: "+Arrays.toString(newvalue));
	}
}
